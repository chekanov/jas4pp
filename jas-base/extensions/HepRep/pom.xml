    <name>JAS 3 HepRep Plugin</name>
    <description>Adds support for reading HepRep 1 and HepRep 2 files, including Binary HepRep.</description>
    
    <repositories>
        <repository>
            <id>freehep-maven2-public</id>
            <name>Maven FreeHEP</name>
            <url>http://srs.slac.stanford.edu/nexus/content/groups/freehep-maven2-public/</url>
        </repository>
    </repositories>
    
    <pluginRepositories>
        <pluginRepository>
            <id>freehep-maven2-public</id>
            <name>Maven FreeHEP</name>
            <url>http://srs.slac.stanford.edu/nexus/content/groups/freehep-maven2-public/</url>
        </pluginRepository>
    </pluginRepositories>

    <scm>
        <url>svnFreehepRepo</url>
        <connection>scm:svn:svn://svn.freehep.org/svn/jas/trunk/extensions/HepRep</connection>
        <developerConnection>scm:svn:svn://svn.freehep.org/svn/jas/trunk/extensions/HepRep</developerConnection>
    </scm>

    <dependencies>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-heprep1</artifactId>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-jheprep</artifactId>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-jheprep1</artifactId>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-jheprep1-adapter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-heprep</artifactId>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-record</artifactId>
        </dependency>
    </dependencies>
    
